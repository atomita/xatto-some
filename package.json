{
  "name": "xatto-some",
  "version": "1.0.0",
  "description": "",
  "main": "dist/xatto-some.min.js",
  "ts:main": "src/index.ts",
  "types": "dist/src/index.d.ts",
  "repository": "git@github.com:atomita/xatto-some.git",
  "author": "atomita",
  "license": "MIT",
  "scripts": {
    "test": "jest --coverage --no-cache",
    "build": "npm run bundle:clean && npm run minify",
    "bundle": "rollup --config",
    "bundle:clean": "rm -rf ./dist && npm run bundle",
    "minify": "uglifyjs dist/${npm_package_name}.js -o dist/${npm_package_name}.min.js -mc pure_funcs=['Object.defineProperty'] --source-map includeSources,url=${npm_package_name}.min.js.map",
    "release": "npm run build && npm test && git commit -am $npm_package_version && git tag $npm_package_version && git push && git push --tags && npm publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "subTaskConcurrency": 1,
    "linters": {
      "src/**/*.ts": [
        "prettier --write",
        "tslint --fix",
        "git add"
      ]
    }
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "babelConfig": {
          "presets": [
            "power-assert"
          ]
        }
      }
    }
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@types/jest": "^23.3.10",
    "babel-core": "^7.0.0-bridge.0",
    "babel-preset-power-assert": "^3.0.0",
    "hasky": "^3.0.2",
    "jest": "^23.2.0",
    "lint-staged": "^7.0.0",
    "power-assert": "^1.6.1",
    "prettier": "^1.11.1",
    "rollup": "^0.57.1",
    "rollup-plugin-typescript2": "^0.12.0",
    "ts-jest": "^23.0.0",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1",
    "uglify-js": "^3.3.16"
  },
  "dependencies": {
    "xatto": "^1.0.0"
  }
}
